<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="deploy" name="drupal-deploy">
	<description>
       	build file to move code to /sites/all/ in drupal installation
	</description>
	<!-- set global properties for this build -->
	<property location="modules" name="modules"/>
	<property location="themes" name="themes"/>
	<!-- local properties -->
	<property file="build.properties"/>
	
	<!-- copy directory -->
	<target name="deploy">
		<!-- Copy modules to Drupal -->
		<copy todir="${drupal.dir}/modules">
		    <fileset dir="modules"/>
		</copy>
		<copy todir="${drupal-test.dir}/modules">
			<fileset dir="modules"/>
		</copy>
		<!-- Copy modules to Drupal 
		<copy todir="${drupal.dir}/themes">
		    <fileset dir="themes"/>
		</copy> -->
	</target>
	
</project>