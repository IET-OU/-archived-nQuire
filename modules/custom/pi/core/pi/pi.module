	};
	if ($uid) {
		$query .= " AND uid = '" . $uid . "'";
	};
	if ($gid) {
		$query .= " AND gid = '" . $gid . "'";
	};

	$items = db_query($query);

	$activities = array();

	while ($item = db_fetch_object($items))
	{
		$activity = array();
		$activity["paa_id"] = $item->paa_id;
		$activity["inquiry_id"] = $item->inquiry_id;
		$activity["activity_id"] = $item->activity_id;
		$activity["uid"] = $item->uid;
		$activity["gid"] = $item->gid;
		$activities[] = $activity;
	};
	return $activities;
}

