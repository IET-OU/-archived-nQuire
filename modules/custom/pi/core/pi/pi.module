function pi_activity_view($activity_id, $arg_node_function=NULL) {
	global $user;
	$uid = $user->uid;
	drupal_set_title('');
	$details = get_inquiry_details_from_current_path();

	//get the visible status
	//$arg_node_function = arg(2);

	//get Drupal node function
	$node_function = get_node_function_of_activity($details->inquiry_id, $activity_id, $uid);

	if($node_function == 'add' && $arg_node_function ==  'add') {
		//get node type
		$loaded_activity = load_activity($activity_id);
		$node_type = $loaded_activity->node_type;

		if( ! function_exists("node_add")) {
			include_once(drupal_get_path('module', 'node') . '/node.pages.inc');
		}
		$output = node_add($node_type);
	}
	elseif ($node_function == 'edit' && $arg_node_function ==  'edit') {
		//get nid
		$nid = get_nid_for_inquiry_activity_and_user($details->inquiry_id, $activity_id, $uid);
