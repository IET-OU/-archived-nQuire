        ),
        'results' => array(
        'description' => t('What can you tell from the results?'),
        'type' => 'text',
        'size' => 'normal',
        'not null' => FALSE,
        ),
	
	'feeder' => array(
        'description' => t('Which feeder was the most visited?'),
        'type' => 'text',
        'size' => 'normal',
