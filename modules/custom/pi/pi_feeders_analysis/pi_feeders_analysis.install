/**
 * Implementation of hook_install().
 */

function pi_feeders_analysis_install() {
// Create tables.
    drupal_install_schema('pi_feeders_analysis');
}

/**
 * Implementation of hook_uninstall().
 */

function pi_feeders_analysis_uninstall() {
// Remove tables.
    drupal_uninstall_schema('pi_feeders_analysis');
    variable_del('pi_feeders_analysis');
}

/**
 * Implementation of hook_schema().
 */

