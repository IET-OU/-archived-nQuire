/**
 * Implementation of pi_available_locations_install().
 */

function pi_available_locations_install() {
  // Create tables.
  drupal_install_schema('pi_available_locations');
}

/**
 * Implementation of pi_available_locations_uninstall().
 */
 
function pi_available_locations_uninstall() {
  // Remove tables.
  drupal_uninstall_schema('pi_available_locations');
}

/**
 * Implementation of pi_available_locations_schema().
 */
 
