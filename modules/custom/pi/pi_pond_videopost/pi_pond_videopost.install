/**
 * Implementation of pi_pond_videopost_install().
 */
 
function pi_pond_videopost_install() {
  // Create tables
  drupal_install_schema('pi_pond_videopost');
}

/**
 * Implementation of pi_pond_videopost_uninstall().
 */
 
function pi_pond_videopost_uninstall() {
  // Remove tables.
  drupal_uninstall_schema('pi_pond_videopost');
}

/**
 * Implementation of pi_pond_videopost_schema().
 */
 
