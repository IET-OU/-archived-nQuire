/**
 * Implementation of hook_node_info().
 */

function pi_compare_noise_node_info() {

    return array(
    'pi_compare_noise' => array(
    'name' => t('Comparing noise data'), // Required.
    'module' => 'pi_compare_noise',  // Required.
    'description' => t('Comparing noise data'), // Required.
    'has_title' => TRUE,
    'title_label' => t('Comparing noise data'),
    'has_body' => FALSE,
    'body_label' => t('Comparing noise'),
    'locked' => TRUE)
    );

}


//hide node revisions box - this is a node type often set to keep revisions
//if form alter not included then user sees the log message box
function pi_compare_noise_form_alter(&$form, $form_state, $form_id) {
    global $user; // Bring $user object into scope if displaying shall depend on userid or role
    #if ( $user->uid != 1 ) // 0 -> Anonymous, 1 -> SuperAdmin, 2+ -> Authenticated users
    if ( !in_array('USER ROLE NAME', $user->roles) ) // Check for role (using role name)
    {
    // add class 'hideme' to elements which shall be hidden
        $form['revision_information']['#attributes'] = array('class' => 'hideme'); // Revision information
    // This class has been added to the CSS file:
    //  .hideme { display: none; }
    }
}

/**
 * Implementation of hook_perm().
 */

function pi_compare_noise_perm() {
    return array('create pi_compare_noise content', 'edit pi_compare_noise');
}

/**
 * Implementation of hook_access().
 */
function pi_compare_noise_access($op, $node) {
    global $user;
    $details = get_inquiry_details_from_current_path();

    if ($op == 'create') {
        return check_node_function_of_activity ($details->inquiry_id, $details->activity_id, $user->uid, 'add');
    //return (user_access('create pi_compare_noise'));
    }

    if ($op == 'update' || $op == 'delete') {
        return check_node_function_of_activity ($details->inquiry_id, $details->activity_id, $user->uid, 'edit');
    //return (user_access('edit own pi_compare_noise'));
    }
}

/**
 * Implementation of hook_form().
 */

function pi_compare_noise_form(&$node) {

// Get metadata for this node type
// (we use it for labeling title and body fields).
// We defined this in pi_compare_noise_node_info().
    $type = node_get_types('type', $node);
    global $user;

    $node_details = get_inquiry_details_from_current_path();
    if (is_numeric($node_details->activity_id)) {
        $current_activity = load_activity($node_details->activity_id);
    }

    if ($current_activity->name) {
        drupal_set_title(t($current_activity->name));
    }

    $form['title'] = array(
        '#type' => 'hidden',
        '#title' => check_plain($type->title_label),
        '#required' => FALSE,
        '#default_value' => check_plain($type->title_label),
        '#weight' => -6
    );

    $form['noisy'] = array(
        '#type' => 'textarea',
        '#title' => t('Is the noisy yard noisy?'),
        '#collapsible' => FALSE,
        '#collapsed' => FALSE,
	'#rows' => 3,
        '#cols' => 40,
        '#weight' => -5
    );

    $form['quiet'] = array(
        '#type' => 'textarea',
        '#title' => t('Is the quiet yard quiet?'),
        '#collapsible' => FALSE,
        '#collapsed' => FALSE,
        '#rows' => 3,
        '#cols' => 40,
        '#weight' => -4
    );
    $form['carpark'] = array(
        '#type' => 'textarea',
        '#title' => t('Is the car park quiet?'),
        '#collapsible' => FALSE,
        '#collapsed' => FALSE,
        '#rows' => 3,
        '#cols' => 40,
        '#weight' => -3
    );


    $prefix = "";

    if(arg(2) == 'edit') {
        $link = build_link('node', $node->nid, 'view', $node_details->inquiry_id, $node_details->stage_id, $node_details->phase_id, $node_details->activity_id);

        switch ($current_activity->destination) {
            case "self":
                $destination = "";
                break;
            case "phase":
                $destination = t("destination=" . build_link("phase", $node_details->phase_id, "view", $node_details->inquiry_id, $node_details->stage_id, $node_details->phase_id,$node_details->activity_id));
                break;
            default:
                $destination = t("destination=" . build_home_link($node_details->inquiry_id, $node_details->stage_id, $node_details->phase_id, $node_details->activity_id));
                break;
        }

        $prefix .= '<p>';
        $prefix .= l(t('View'), $link,  array('html' => true, 'query' => $destination));
        $prefix .= '</p>';
    }

/*
    if ($current_activity->description) {
    	$prefix .= "<p>" . t($current_activity->description) . "</p>";
    }
    else {
    	$prefix .= "<p>Comparing noise data</p>";
    }
*/

    $form['#prefix'] = $prefix;

    return $form;

}

/**
 * Implementation of hook_insert().
 */


function pi_compare_noise_insert($node) {
    db_query("INSERT INTO {pi_compare_noise} (nid, vid, noisy, quiet, carpark) VALUES ('%d', '%d', '%s', '%s', '%s')",
        $node->nid, $node->vid, $node->noisy, $node->quiet, $node->carpark );
}

/**
 * Implementation of hook_update().
 */

function pi_compare_noise_update($node) {
    if ($node->revision) {
        pi_compare_feeders_insert($node);
    }

    else {
        db_query("UPDATE {pi_compare_feeders} SET noisy = '%s', quiet = '%s', carpark = '%s' WHERE vid = %d", $node->noisy, $node->quiet, $node->carpark, $node->vid);
    }
}

/**
 * Implementation of hook_delete().
 */

function pi_compare_noise_delete(&$node) {
// Delete the related information we were saving for this node.
    db_query('DELETE FROM {pi_compare_noise} WHERE nid = %d', $node->nid);
}

/**
 * Implementation of hook_load().
 */

function pi_compare_noise_load($node) {
    return db_fetch_object(db_query('SELECT * FROM {pi_compare_noise} WHERE vid = %d',
    $node->vid));
}

/**
 * Implementation of hook_view().
 */
function pi_compare_noise_view($node, $teaser = FALSE, $page = FALSE) {
    if (!$teaser) {
    // Use Drupal's default node view.
        $node = node_prepare($node, $teaser);

        $node->content['pi_compare_noise'] = array(
            '#value' => theme('pi_compare_noise', $node),
            '#weight' => 2
        );

    }

    if ($teaser) {
    // Use Drupal's default node view.
        $node = node_prepare($node, $teaser);
    }

    return $node;
}

function pi_compare_noise_theme() {
    return array(
    'pi_compare_noise' => array(
    'arguments' => array('node'),
    ),
    );
}

function theme_pi_compare_noise($node) {

    $output = '<p><strong>Is the noisy yard noisy?</strong> ' . check_plain($node->noisy). '</p>';
    $output .= '<p><strong>Is the quiet yard quiet?</strong> ' . check_plain($node->quiet). '</p>';
    $output .= '<p><strong>Is the car park quiet?</strong> ' . check_plain($node->carpark). '</p>';

    return $output;
}
