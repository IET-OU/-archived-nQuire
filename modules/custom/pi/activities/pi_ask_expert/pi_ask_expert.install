      ),
      'question' => array(
        'type' => 'text',
        'not null' => TRUE,
        'size' => 'big',
        'description' => 'Question to Ask Expert.',
      ),
      'answer' => array(
        'type' => 'text',
        'not null' => FALSE,
        'size' => 'big',
