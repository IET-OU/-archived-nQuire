/**
 * Implementation of pi_ask_expert_install().
 */
 
function pi_ask_expert_install() {
  // Create tables.
  drupal_install_schema('pi_ask_expert');
}

/**
 * Implementation of pi_ask_expert_uninstall().
 */
 
function pi_ask_expert_uninstall() {
  // Remove tables.
  drupal_uninstall_schema('pi_ask_expert');
}

