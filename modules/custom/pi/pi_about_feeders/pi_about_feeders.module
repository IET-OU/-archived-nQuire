/**
 * Implementation of hook_insert().
 */


function pi_about_feeders_insert($node) {
    db_query("INSERT INTO {pi_about_feeders} (nid, vid, h_see, h_many, h_common, h_visits, h_time, h_comments, g_see, g_many, g_common, g_visits, g_time, g_comments) VALUES ('%d', '%d', '%s', '%d', '%s', '%d', '%s', '%s', '%s', '%d', '%s', '%d', '%s', '%s')",
        $node->nid, $node->vid, $node->h_see, $node->h_many, $node->h_common, $node->h_visits, $node->h_time, $node->h_comments, $node->g_see, $node->g_many, $node->g_common, $node->g_visits, $node->g_time, $node->g_comments);
}

/**
 * Implementation of hook_update().
 */

function pi_about_feeders_update($node) {
    if ($node->revision) {
        pi_about_feeders_insert($node);
    }

    else {
        db_query("UPDATE {pi_about_feeders} SET h_see = '%s', h_many = '%d', h_common = '%s', h_visits = '%d', h_time = '%s', h_comments = '%s', g_see = '%s', g_many = '%d', g_common = '%s', g_visits = '%d', g_time = '%s', g_comments = '%s' WHERE vid = %d", $node->h_see, $node->h_many, $node->h_common, $node->h_visits, $node->h_time, $node->h_comments, $node->g_see, $node->g_many, $node->g_common, $node->g_visits, $node->g_time, $node->g_comments, $node->vid);
    }
}

/**
 * Implementation of hook_delete().
 */

function pi_about_feeders_delete(&$node) {
// Delete the related information we were saving for this node.
    db_query('DELETE FROM {pi_about_feeders} WHERE nid = %d', $node->nid);
}

/**
 * Implementation of hook_load().
 */

function pi_about_feeders_load($node) {
    return db_fetch_object(db_query('SELECT * FROM {pi_about_feeders} WHERE vid = %d',
    $node->vid));
}

/**
 * Implementation of hook_view().
 */
function pi_about_feeders_view($node, $teaser = FALSE, $page = FALSE) {
    if (!$teaser) {
    // Use Drupal's default node view.
        $node = node_prepare($node, $teaser);

        $node->content['pi_about_feeders'] = array(
            '#value' => theme('pi_about_feeders', $node),
            '#weight' => 2
        );

    }

    if ($teaser) {
    // Use Drupal's default node view.
        $node = node_prepare($node, $teaser);
    }

    return $node;
}

function pi_about_feeders_theme() {
    return array(
    'pi_about_feeders' => array(
    'arguments' => array('node'),
    ),
    );
}


