        '#rows' => 3,
        '#cols' => 40,
        '#weight' => -6
    );
    $form['garden']['g_many'] = array(
        '#type' => 'textfield',
        '#title' => t('How many birds visited the feeder?'),
        '#required' => FALSE,
        '#default_value' => $node->g_many,
        '#weight' => -5
    );
