/**
 * Implementation of hook_install().
 */

function pi_feeders_evaluation_install() {
// Create tables.
    drupal_install_schema('pi_feeders_evaluation');
}

/**
 * Implementation of hook_uninstall().
 */

function pi_feeders_evaluation_uninstall() {
// Remove tables.
    drupal_uninstall_schema('pi_feeders_evaluation');
    variable_del('pi_feeders_evaluation');
}

