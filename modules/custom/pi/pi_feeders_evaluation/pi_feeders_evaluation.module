/**
 * Implementation of hook_node_info().
 */

function pi_feeders_evaluation_node_info() {

    return array(
    'pi_feeders_evaluation' => array(
    'name' => t('Evaluation of school bird feeders experiment'), // Required.
    'module' => 'pi_feeders_evaluation',  // Required.
    'description' => t('Evaluation of school bird feeders experiment'), // Required.
    'has_title' => TRUE,
    'title_label' => t('Evaluation of school bird feeders experiment'),
    'has_body' => FALSE,
    'body_label' => t('Evaluation of school bird feeders experiment'),
