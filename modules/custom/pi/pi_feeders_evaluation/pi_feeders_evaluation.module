    );

}


//hide node revisions box - this is a node type often set to keep revisions
//if form alter not included then user sees the log message box
function pi_feeders_evaluation_form_alter(&$form, $form_state, $form_id) {
    global $user; // Bring $user object into scope if displaying shall depend on userid or role
    #if ( $user->uid != 1 ) // 0 -> Anonymous, 1 -> SuperAdmin, 2+ -> Authenticated users
    if ( !in_array('USER ROLE NAME', $user->roles) ) // Check for role (using role name)
    {
    // add class 'hideme' to elements which shall be hidden
        $form['revision_information']['#attributes'] = array('class' => 'hideme'); // Revision information
    // This class has been added to the CSS file:
    //  .hideme { display: none; }
    }
}

/**
 * Implementation of hook_perm().
 */

function pi_feeders_evaluation_perm() {
    return array('create pi_feeders_evaluation content', 'edit pi_feeders_evaluation');
}

/**
 * Implementation of hook_access().
 */
function pi_feeders_evaluation_access($op, $node) {
    global $user;
    $details = get_inquiry_details_from_current_path();

    if ($op == 'create') {
        return check_node_function_of_activity ($details->inquiry_id, $details->activity_id, $user->uid, 'add');
    //return (user_access('create pi_feeders_evaluation'));
    }

    if ($op == 'update' || $op == 'delete') {
        return check_node_function_of_activity ($details->inquiry_id, $details->activity_id, $user->uid, 'edit');
    //return (user_access('edit own pi_feeders_evaluation'));
    }
}

/**
 * Implementation of hook_form().
 */

function pi_feeders_evaluation_form(&$node) {

// Get metadata for this node type
// (we use it for labeling title and body fields).
// We defined this in pi_feeders_evaluation_node_info().
    $type = node_get_types('type', $node);
    global $user;

    $node_details = get_inquiry_details_from_current_path();
    if (is_numeric($node_details->activity_id)) {
        $current_activity = load_activity($node_details->activity_id);
    }

    if ($current_activity->name) {
        drupal_set_title(t($current_activity->name));
    }

    $form['title'] = array(
        '#type' => 'hidden',
        '#title' => check_plain($type->title_label),
        '#required' => FALSE,
        '#default_value' => check_plain($type->title_label),
        '#weight' => -6
    );

    $form['obs'] = array(
        '#type' => 'textfield',
        '#title' => t('What do you think about the observational method as used at Attenborough?'),
	'#required' => FALSE,
	'#default_value' =>check_plain($node->obs),
        '#weight' => -5
    );
    
        $form['comp'] = array(
        '#type' => 'textfield',
        '#title' => t('What do you think about the comparative method used with the school bird feeders?'),
	'#required' => FALSE,
	'#default_value' =>check_plain($node->comp),
        '#weight' => -4
    );
    
        $form['fair'] = array(
        '#type' => 'textfield',
        '#title' => t('What do you think about the fair test method used for the garden experiment?'),
	'#required' => FALSE,
	'#default_value' =>check_plain($node->fair),
        '#weight' => -3
    );

    $prefix = "";

    if(arg(2) == 'edit') {
        $link = build_link('node', $node->nid, 'view', $node_details->inquiry_id, $node_details->stage_id, $node_details->phase_id, $node_details->activity_id);

        switch ($current_activity->destination) {
            case "self":
                $destination = "";
                break;
            case "phase":
                $destination = t("destination=" . build_link("phase", $node_details->phase_id, "view", $node_details->inquiry_id, $node_details->stage_id, $node_details->phase_id,$node_details->activity_id));
                break;
            default:
                $destination = t("destination=" . build_home_link($node_details->inquiry_id, $node_details->stage_id, $node_details->phase_id, $node_details->activity_id));
                break;
        }

        $prefix .= '<p>';
        $prefix .= l(t('View'), $link,  array('html' => true, 'query' => $destination));
        $prefix .= '</p>';
    }

/*
    if ($current_activity->description) {
    	$prefix .= "<p>" . t($current_activity->description) . "</p>";
    }
    else {
    	$prefix .= "<p>Evaluating the studies</p>";
    }
*/

    $form['#prefix'] = $prefix;

    return $form;

}

/**
 * Implementation of hook_insert().
 */


function pi_feeders_evaluation_insert($node) {
    db_query("INSERT INTO {pi_feeders_evaluation} (nid, vid, obs, comp, fair) VALUES ('%d', '%d', '%s', '%s', '%s')",
        $node->nid, $node->vid, $node->obs, $node->comp, $node->fair);
}

/**
 * Implementation of hook_update().
 */

function pi_feeders_evaluation_update($node) {
    if ($node->revision) {
        pi_feeders_evaluation_insert($node);
    }

    else {
        db_query("UPDATE {pi_feeders_evaluation} SET obs = '%s', comp = '%s', fair = '%s' WHERE vid = %d", $node->obs, $node->comp, $node->fair, $node->vid);
    }
}

/**
 * Implementation of hook_delete().
 */

function pi_feeders_evaluation_delete(&$node) {
// Delete the related information we were saving for this node.
    db_query('DELETE FROM {pi_feeders_evaluation} WHERE nid = %d', $node->nid);
}

/**
 * Implementation of hook_load().
 */

function pi_feeders_evaluation_load($node) {
    return db_fetch_object(db_query('SELECT * FROM {pi_feeders_evaluation} WHERE vid = %d',
    $node->vid));
}

/**
 * Implementation of hook_view().
 */
function pi_feeders_evaluation_view($node, $teaser = FALSE, $page = FALSE) {
    if (!$teaser) {
    // Use Drupal's default node view.
        $node = node_prepare($node, $teaser);

        $node->content['pi_feeders_evaluation'] = array(
            '#value' => theme('pi_feeders_evaluation', $node),
            '#weight' => 2
        );

    }

    if ($teaser) {
    // Use Drupal's default node view.
        $node = node_prepare($node, $teaser);
    }

    return $node;
}

function pi_feeders_evaluation_theme() {
    return array(
    'pi_feeders_evaluation' => array(
    'arguments' => array('node'),
    ),
    );
}

function theme_pi_feeders_evaluation($node) {

    $output = '<p><strong>What do you think about the observational method as used at Attenborough?</strong> ' . check_plain($node->obs). '</p>';
    $output .= '<p><strong>What do you think about the comparative method used with the school bird feeders?</strong> ' . check_plain($node->comp). '</p>';
    $output .= '<p><strong>What do you think about the fair test method used for the garden experiment?</strong> ' . check_plain($node->fair). '</p>';


    return $output;
}
