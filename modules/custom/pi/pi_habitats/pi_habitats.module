/**
 * Implementation of hook_node_info().
 */

function pi_habitats_node_info() {

    return array(
    'pi_habitats' => array(
    'name' => t('About habitats'), // Required.
    'module' => 'pi_habitats',  // Required.
    'description' => t('About habitats'), // Required.
    'has_title' => TRUE,
    'title_label' => t('About habitats'),
